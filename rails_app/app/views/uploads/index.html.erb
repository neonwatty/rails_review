<h1 class="text-2xl font-bold mb-4">Uploads</h1>
<%= link_to 'New Upload', new_upload_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
    <thead class="bg-gray-100 border-b border-gray-200">
      <tr>
        <th class="py-3 px-6 text-left text-gray-600 font-medium uppercase">Name</th>
        <th class="py-3 px-6 text-left text-gray-600 font-medium uppercase">Files</th>
        <th class="py-3 px-6 text-left text-gray-600 font-medium uppercase">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @uploads.each do |upload| %>
        <tr class="border-b border-gray-200">
          <td class="py-3 px-6 text-gray-800">
            <% if upload.files.attached? %>
              <% upload.files.each do |file| %>
                <div class="mb-1">
                  <%= file.filename.to_s %>
                </div>
              <% end %>
            <% else %>
              <span class="text-gray-500">No files attached</span>
            <% end %>
          </td>
          <td class="py-3 px-6">
            <% if upload.files.attached? %>
              <% upload.files.each do |file| %>
                <div class="mb-1">
                  <%= link_to 'Download', rails_blob_path(file, disposition: "attachment"), class: 'text-blue-500 hover:text-blue-600' %>
                </div>
              <% end %>
            <% else %>
              <span class="text-gray-500">No files attached</span>
            <% end %>
          </td>
          <td class="py-3 px-6">
            <%= link_to 'Show', upload_path(upload), class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
            <%= link_to 'Edit', edit_upload_path(upload), class: 'bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600' %>
            <%= link_to 'Destroy', upload_path(upload), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
