<div class="welcome-section">
  <h1 class="text-3xl font-semibold mb-2">Welcome to <%= ENV["APP_NAME_PUBLIC"] %></h1>
  <hr class="border-t border-gray-300 my-4">
</div>
<h2 class="text-2xl font-bold mb-4">Uploads</h2>
<%= link_to 'New Upload', new_upload_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
    <thead class="bg-gray-100 border-b border-gray-200">
      <tr>
        <th class="py-3 px-6 text-left text-gray-600 font-medium uppercase">Name</th>
        <th class="py-3 px-6 text-left text-gray-600 font-medium uppercase">Files</th>
        <th class="py-3 px-6 text-left text-gray-600 font-medium uppercase">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @uploads.each do |upload| %>
        <tr class="border-b border-gray-200">
          <td class="py-3 px-6 text-gray-800">
            <% if upload.files.attached? %>
              <% upload.files.each do |file| %>
                <div class="mb-1">
                  <%= file.filename.to_s %>
                </div>
              <% end %>
            <% else %>
              <span class="text-gray-500">No files attached</span>
            <% end %>
          </td>
          <td class="py-3 px-6">
            <% if upload.files.attached? %>
              <% upload.files.each do |file| %>
                <% if file.content_type.start_with?('image/') %>
                  <%= image_tag rails_blob_path(file, disposition: "inline"), alt: 'File thumbnail', class: 'w-32 h-32 object-cover border rounded mr-2' %>
                <% elsif file.content_type.start_with?('video/') %>
                  <i class="fas fa-video text-gray-600 mr-2"></i>
                <% elsif file.content_type.start_with?('audio/') %>
                  <i class="fas fa-headphones text-gray-600 mr-2"></i>
                <% else %>
                  <i class="fas fa-file-alt text-gray-600 mr-2"></i> <!-- For other file types -->
                <% end %>
                <%= link_to 'Download', rails_blob_path(file, disposition: "attachment"), class: 'text-blue-500 hover:text-blue-600' %>
              <% end %>
            <% else %>
              <span class="text-gray-500">No files attached</span>
            <% end %>
          </td>
          <td class="py-3 px-6">
            <%= link_to 'Show', upload_path(upload), class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
            <%= link_to 'Destroy', upload_path(upload), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
