<h1>Show page for Upload</h1>
<% if @upload.files.attached? %>
  <% @upload.files.each do |file| %>
    <%= image_tag file, alt: 'Uploaded Image', style: 'max-width: 100%; height: auto;' %>
  <% end %>
<% else %>
  <p>No files attached.</p>
<% end %>
<%= link_to 'Back', uploads_path, class: 'text-blue-500 hover:text-blue-700 font-medium' %>
<%= button_to "Delete" , upload_path(@upload), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600' %>
