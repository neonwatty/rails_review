<%= render 'shared/nav' %>
<div class="hero bg-base-200">
  <div class="hero-content flex-col gap-5">
    <h2 class="text-2xl font-bold mb-4">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email,  class: "block text-sm font-medium mb-1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-profile-input-field" %>
      </div>
      <div class="actions p-10">
        <%= f.submit "Send me reset password instructions", class: "btn btn-accent btn-md", id: 'send-reset-password-btn' %>
      </div>
    <% end %>
  </div>
</div>