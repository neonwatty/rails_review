<div class="flex-col gap-5">
  <h2 class="text-2xl font-bold mb-4">Edit profile</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field pt-4">
      <%= f.label :email, class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-profile-input-field", id: "edit-profile-email" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field pt-4">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "user-profile-input-field", id: "edit-profile-password-new" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="field pt-4">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user-profile-input-field", id: "edit-profile-password-new-confirm" %>
    </div>
    <div class="field pt-4">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "user-profile-input-field", id: "edit-profile-password-current" %>
    </div>
    <div class="actions pt-2">
      <%= f.submit "Update", class: "p-3 rounded-xl text-black cursor-pointer bg-emerald-400", id: "update-profile-btn" %>
    </div>
  <% end %>
  <div class="divider"></div>
