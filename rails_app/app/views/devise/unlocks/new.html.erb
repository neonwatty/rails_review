<h2>Resend unlock instructions</h2>
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium mb-1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-profile-input-field" %>
  </div>
  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: "btn btn-accent btn-md" %>
  </div>
<% end %>