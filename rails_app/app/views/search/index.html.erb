<h1>Search</h1>
<%= form_with url: search_index_path, method: :get, local: true do %>
  <div class="field">
    <%= label_tag :query, 'Search:' %>
    <%= text_field_tag :query, params[:query], placeholder: 'Enter search term' %>
  </div>
  <div class="actions">
    <%= submit_tag 'Search' %>
  </div>
<% end %>
<% if @results.present? %>
  <h2>Results:</h2>
  <ul>
    <% @results.each do |result| %>
      <li><%= result.filename %></li>
    <% end %>
  </ul>
<% elsif @query.present? %>
  <p>No results found for '<%= @query %>'</p>
<% end %>
